---
import Hero from "./Hero.astro";
const {heroText, imagePath, altText} = Astro.props;
---

<div class="main-grid">
    <section class="topbar"></section>
    <nav>
        <ul>
            <li><a href="/#">About</a></li>
            <li><a href="/casestudy_single">Case Study</a></li>
            <li><a href="/service_single">Service</a></li>
            <li><a href="/team">Team</a></li>
        </ul>
    </nav>
</div>
<Hero heroText={heroText} imagePath={imagePath} altText={altText}>

<style>
    .wrapper {
        grid-column: page;
    }
    .topbar {
        height: 3rem;
        background-color: var(--prime-black-dark);
    }
    nav {
        grid-column: content;
        & section.bottombar {
            height: 5rem;
            background-color: var(--prime-black-light);
        }
    }

</style>